set editor="vim"
set sleep_time=0

set mail_check=90
set timeout=15

set imap_keepalive=900
set imap_check_subscribed=yes
set imap_list_subscribed=yes
set imap_fetch_chunk_size=200
set imap_idle=no

set read_inc=100
set write_inc=100
set net_inc=10
set mark_old=no

set header_cache=~/.mutt/cache/headers
set message_cachedir=~/.mutt/cache/bodies
set certificate_file=~/.mutt/certificates

set sort=threads
set strict_threads=yes
set sort_browser=date
set sort_aux=reverse-last-date-received

set alias_file=~/.mutt/aliases
source $alias_file
set mailcap_path=~/.mutt/mailcap

alternative_order text/plain text text/html
auto_view text/html

source ~/.mutt/account.sonic.wchinkle

macro index,pager <f2> '<sync-mailbox><enter-command>source ~/.mutt/account.sonic.wchinkle<enter><change-folder>!<enter>' "Switch to wesley@evokateur.net"
macro index,pager <f3> '<sync-mailbox><enter-command>source ~/.mutt/account.sonic.sfizio<enter><change-folder>!<enter>' "Switch to sfizio@evokateur.net"
