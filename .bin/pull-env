#!/bin/bash

source "$HOME/.config/shell/env/colors.sh"
FORMAT="${ITALIC}${BLUE}%s${RESET}\n"

printf "$FORMAT" "ðŸ”„ Running 'dotfiles pull'.."
source "$HOME/.config/shell/functions/dotfiles.sh" && dotfiles pull
echo
printf "$FORMAT" "ðŸ”„ Running 'pass git pull'.."
pass git pull
echo
printf "$FORMAT" "ðŸ”„ Running 'git pull' in ~/.config/nvim.."
cd ~/.config/nvim && git pull
echo
printf "$FORMAT" "ðŸ”„ Running 'git pull' in ~/obsidian-vault.."
cd ~/obsidian-vault/ && git pull

printf "$FORMAT" "ðŸ”„ Running 'git pull' in ~/code/cv-joint.."
cd ~/code/cv-joint && git pull
